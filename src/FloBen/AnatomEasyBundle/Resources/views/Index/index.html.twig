{% extends "FloBenAnatomEasyBundle::base.html.twig" %}

{% block title %}Accueil{% endblock title %}
{% block body %}

     
        {{ parent() }}

        <div class="hero-unit">

            <h1>Anatom-Easy</h1>
            <p>L'anatomie, c'est facile!</p>
        </div>
        <div > 
            <form action="{{ path('fos_user_security_check') }}" method="post" class="form-inline">
            <legend  >Connecte toi!</legend>
                    <input type="text" class="input-medium" id="username"   name="_username"  required="required"  placeholder="Nom d'utilisateur"/>

                    <input   class="input-small" type="password" id="password" name="_password" placeholder="Mot de passe"/>
                    
                        
                        <label for="remember_me" class="checkbox"><input type="checkbox"   id="remember_me" name="_remember_me" checked >Se rappeler de moi</label> 
                    <input type="submit" id="submitButton" class="btn"  value="Connexion" />
                    <div style="height:14px;margin-left:10px">
                    </div>
                </div>
            </form>
        </div>
{% endblock body %} 


{% block javascripts %}
 
        <script src="{{ asset('/css/clippy/build/clippy.js') }}" type="text/javascript" ></script> 
        <script src="{{ asset('/bundles/flobenanatomeasy/js/clippyTools.js') }}" type="text/javascript" ></script> 
        <script type="text/javascript">     
            $(document).ready(function() {
                var optionArray= new Array(); 
                optionArray[0]= { item:'#submitButton',timeout:'5000', gotoElement:true,xPos:100};
                optionArray[1]= { action: 'speak', speech: 'Connecte toi, et commence a apprendre!',timeout:'5000' }; 
                clippyAgent(optionArray,'Bienvenue sur Anatom-easy !');
            }); </script>
{% endblock javascripts %} 

