<?php

namespace FloBen\AnatomEasyBundle\Entity;

use FOS\UserBundle\Entity\User as BaseUser;
use Doctrine\ORM\Mapping as ORM;

/**
 * Teacher 
 * @ORM\Entity
 * @ORM\Table(name="Teacher")
 */
class Teacher extends BaseUser
{
    /**
     * @ORM\Id
     * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    protected $id; 
    
    /**
     * @ORM\OneToMany(targetEntity="Group", mappedBy="teacher")
     */
    protected $groupe; 
    
    /**
     * Get id
     *
     * @return int 
     */
    public function getId()
    {
        return $this->id;
    }
    /**
     * Constructor
     */
    public function __construct()
    {
        $this->groupe = new \Doctrine\Common\Collections\ArrayCollection();
    }
    
    /**
     * Add groupe
     *
     * @param \FloBen\AnatomEasyBundle\Entity\Group $groupe
     * @return Teacher
     */
    public function addGroupe(\FloBen\AnatomEasyBundle\Entity\Group $groupe)
    {
        $this->groupe[] = $groupe;
    
        return $this;
    }

    /**
     * Remove groupe
     *
     * @param \FloBen\AnatomEasyBundle\Entity\Group $groupe
     */
    public function removeGroupe(\FloBen\AnatomEasyBundle\Entity\Group $groupe)
    {
        $this->groupe->removeElement($groupe);
    }

    /**
     * Get groupe
     *
     * @return \Doctrine\Common\Collections\Collection 
     */
    public function getGroupe()
    {
        return $this->groupe;
    }
}